class Solution:
    def jump(self, nums):
        n = len(nums)
        if n == 1:
            return 0  # No jumps needed if already at the last index

        jumps = 0
        current_end = 0
        farthest = 0

        for i in range(n):
            farthest = max(farthest, i + nums[i])  # Update the farthest index we can reach
            
            if i == current_end:  # We reached the end of the current jump range
                jumps += 1  # Make a jump
                current_end = farthest  # Update the current range to the farthest we can reach
                
                if current_end >= n - 1:  # If we can reach or exceed the last index, we're done
                    break

        return jumps
